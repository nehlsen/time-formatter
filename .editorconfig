# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset=utf-8
indent_style = space
indent_size = 4

[{*.yaml,*.yml,.yamllint}]
indent_size = 2
ij_yaml_spaces_within_brackets = false

[*.md]
trim_trailing_whitespace = false
