{
  "name": "nehlsen/time-formatter",
  "description": "Small Utility to format _remaining_ time of something into a human-readable form",
  "license": "MIT",
  "type": "lib",
  "require": {
    "php": "^8.3",
    "symfony/options-resolver": "^6.3",
    "symfony/translation-contracts": "^2.5 || ^3.0"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.42",
    "friendsofphp/php-cs-fixer": "^3.46",
    "jangregor/phpstan-prophecy": "^1.0",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "nehlsen\\TimeFormatter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "nehlsen\\TimeFormatter\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true
    }
  },
  "scripts": {
    "cs-fixer:check": "php-cs-fixer fix --dry-run --diff",
    "cs-fixer:fix": "php-cs-fixer fix --diff",
    "phpstan": "phpstan analyse src tests --level=${PHPSTAN_LEVEL:-8}",
    "quality": [
      "@cs-fixer:fix",
      "@phpstan",
      "@tests"
    ],
    "tests": "phpunit --coverage-text --colors=never --log-junit=var/junit.xml --coverage-clover=var/coverage.xml --coverage-html=var/coverage"
  }
}
